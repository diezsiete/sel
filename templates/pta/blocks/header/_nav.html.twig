<div class="header-container container">
    <div class="header-row">
        <div class="header-column">
            <div class="header-row">
                <div class="header-logo">
                    <a href="{{ path('pta_index') }}">
                        <img alt="Porto" width="125" data-sticky-width="107" data-sticky-height="40"
                             src="{{ asset('/img/pta/logo-blanco.png') }}">
                    </a>
                </div>
            </div>
        </div>

        <div class="header-column justify-content-end">
            <div class="header-row">
                <div class="header-nav header-nav-stripe order-2 order-lg-1">
                    <div class="header-nav-main header-nav-main-square header-nav-main-effect-1 header-nav-main-sub-effect-1">
                        <nav class="collapse">
                            <ul class="nav nav-pills" id="mainNav">
                                <li class="dropdown">
                                    <a href="{{ path('pta_index') }}"
                                       class="dropdown-item dropdown-toggle {{ app.request.attributes.get('_route') is same as('pta_index') ? 'active' : '' }}" >
                                        Inicio
                                    </a>
                                </li>
                                <li class="dropdown dropdown-mega">
                                    <a class="dropdown-item dropdown-toggle {{ app.request.attributes.get('_route') is same as('pta_nosotros') ? 'active' : '' }}"
                                       href="{{ path('pta_nosotros') }}">
                                        Nosotros
                                    </a>
                                </li>
                                <li class="dropdown">
                                    <a class="dropdown-item dropdown-toggle {{ app.request.attributes.get('_route') is same as('pta_servicios') ? 'active' : '' }}"
                                       href="{{ path('pta_servicios') }}">
                                        Servicios
                                    </a>
                                </li>
                                {% if is_granted('ASPIRANTES_MODULE') %}
                                    <li class="dropdown">
                                        {% set active = app.request.attributes.get('_route') in ['vacante_listado', 'vacante_detalle', 'vacante_aplicar'] %}
                                        <a class="dropdown-item dropdown-toggle {{ active ? 'active' : '' }}"
                                           href="{{ path('vacante_listado') }}">
                                            Ofertas de empleo
                                        </a>
                                    </li>
                                {% endif %}
                                <li class="dropdown">
                                    {% set active = app.request.attributes.get('_route') in ['pta_noticias', 'pta_noticias_categoria', 'pta_noticia'] %}
                                    <a class="dropdown-item dropdown-toggle {{ active ? 'active' : '' }}"
                                       href="{{ path('pta_noticias') }}">
                                        Noticias / Laborales
                                    </a>
                                </li>
                                <li class="dropdown">
                                    <a class="dropdown-item dropdown-toggle {{ app.request.attributes.get('_route') is same as('pta_contacto') ? 'active' : '' }}"
                                       href="{{ path('pta_contacto') }}">
                                        Contacto
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                    <button class="btn header-btn-collapse-nav" data-toggle="collapse" data-target=".header-nav-main nav">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>
                {% if app.user %}
                    {{ include('pta/blocks/header/_logged.html.twig') }}
                {% endif %}
            </div>
        </div>
    </div>
</div>