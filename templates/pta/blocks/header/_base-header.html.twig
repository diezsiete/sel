{% set header_class = app.user ? '' : 'header-effect-shrink' %}
{% set header_data_plugin_options = app.user ? {} : {
    'stickyEnabled': true,
    'stickyEffect': 'shrink',
    'stickyEnableOnBoxed': true,
    'stickyEnableOnMobile': true,
    'stickyChangeLogo': true,
    'stickyStartAt': 10,
    'stickyHeaderContainerHeight': 70
} %}

<header id="header" class="{{ header_class }}"
        data-plugin-options="{{ header_data_plugin_options | json_encode() }}">

    {% set header_body_class = app.user ? 'border-top-0' : 'header-body border-top-0' %}
    <div class="{{ header_body_class }}">

        {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
            <div class="header-top header-top-no-min-height" style="background: #fafafa;">
                <div class="container-fluid px-0">
                    <div class="header-row py-0">
                        <div class="header-column justify-content-end">
                            <div class="header-row">

                                <span class="btn btn-secondary rounded-0 font-weight-bold d-none d-sm-inline-flex align-items-center align-self-stretch px-4">
                                    VIENDO A <span class="font-weight-light mx-1">{{ app.token.user.nombreCompleto(true) }}</span>
                                </span>
                                <a href="{{ path('admin_usuarios', {'_switch_user': '_exit'}) }}"
                                   class="close-theme-switcher-bar btn btn-quaternary rounded-0 d-flex align-items-center align-self-stretch">
                                    <i class="fa fa-times text-4 px-2"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        {% endif %}




        {% if not app.user %}
            {{ include('pta/blocks/header/_header-topv2.html.twig') }}
        {% endif %}
        <div class="header-container container">
            <div class="header-row">
                <div class="header-column">
                    <div class="header-row">
                        <div class="header-logo">
                            <a href="{{ path('pta_index') }}">
                                <img alt="Porto" width="125" height="48" data-sticky-width="107" data-sticky-height="40" src="{{ asset('/img/pta/logo-PTA3.png') }}">
                            </a>
                        </div>
                    </div>
                </div>

                <div class="header-column justify-content-end">
                    <div class="header-row">
                        <div class="header-nav header-nav-stripe order-2 order-lg-1">
                            <div class="header-nav-main header-nav-main-square header-nav-main-effect-1 header-nav-main-sub-effect-1">
                                {{ include('pta/blocks/header/_nav.html.twig') }}
                            </div>
                            <button class="btn header-btn-collapse-nav" data-toggle="collapse" data-target=".header-nav-main nav">
                                <i class="fas fa-bars"></i>
                            </button>
                        </div>
                        {% if app.user %}
                            {{ include('pta/blocks/header/_logged.html.twig') }}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        {% if app.user %}
            {{ include('pta/blocks/header/_nav-admin.html.twig') }}
        {% endif %}
    </div>

</header>
