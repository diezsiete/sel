{% extends 'pta/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('hv-adjunto') }}
{% endblock %}

{% block body %}
<div class="container py-2 mt-4">
    <div class="row">
        <div class="col-lg-3 mt-4 mt-lg-0">

            {{ include('pta/app/security/_left-nav.html.twig') }}

        </div>
        <div class="col-lg-9">

            <div class="row">
                <div class="col">
                    <section class="card">
                        <header class="card-header">
                            <div class="card-actions">
                                <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                            </div>

                            <h2 class="card-title">Cargar hoja de vida</h2>
                        </header>
                        <div class="card-body">
                            <form action="{{ path('hv_adjunto_upload', {id: hv.id}) }}" class="dropzone dz-square" id="dropzone-example">

                            </form>
                        </div>
                    </section>
                </div>
            </div>

            <div class="row {{hv.adjunto ? '' : 'hidden'}}">
                <div class="col">
                    <section class="card">
                        <header class="card-header">
                            <div class="card-actions">
                                <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                            </div>
                            <h2 class="card-title">Hoja de vida</h2>
                        </header>
                        <div class="card-body">
                            <embed class="pdf-view" type="application/pdf" src="{{ path('hv_adjunto_download', {id: hv.id}) }}" id="embed" width="100%" height="716">
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('hv-adjunto') }}
{% endblock %}
