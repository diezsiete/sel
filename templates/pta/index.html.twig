{% extends 'pta/base.html.twig' %}

{% block body_header %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('index') }}
{% endblock %}


{% block body %}
    <!-- SLIDER -->
    <section class="row-fluid center-text text-center twin-hero">
        <div class="hero-shadow">
        </div>
        <div class="hero-container">
            <div class="left-hero" id="left-hero">
                <div class="left-hero-tilt left-hero-tilt-expanded">
                    <div class="side-container">
                        <div class="initial active">
                            <h2>Empresas</h2>
                            <p>Consiga el personal que su empresa necesita</p>
                            <span class="round-icon">+</span>
                        </div>
                        <div class="collapsed">
                            <h2>Empresas</h2>
                            <span class="round-filled-icon">+</span>
                        </div>
                        <div class="expanded">

                            <h2>Empresas</h2>

                            <p>Suministramos personal calificado para todos los sectores economicos</p>

                            <div class="hero-twin-items">
                                <div class="hero-twin-item">
                                    <i class="icon-featured icon-user icons text-color-light"></i>
                                    <p>Reclutamiento, evaluación y selección de personal</p>
                                </div>
                                <div class="hero-twin-item">
                                    <i class="icon-featured icon-layers icons text-color-light"></i>
                                    <p>Contratación y administración</p>
                                </div>
                                <div class="hero-twin-item">
                                    <i class="icon-featured icon-phone icons text-color-light"></i>
                                    <p>Atención y soporte</p>
                                </div>
                            </div>
                            <a class="btn btn-white btn-twin-hero"
                               href="{{ path('pta_servicios') }}"
                               data-ga-twin-label="| Business CTA" data-pa-click="hero|Business CTA">
                                Conozca mas sobre nosotros</a>
                            <div class="legal-container">
                                <p class="legal-notes">¿Ya es cliente?<br>
                                    <a href="{{ path('app_login') }}">
                                        Ingrese al portal de clientes
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="right-hero" id="right-hero">
                <div class="right-hero-tilt">
                    <div class="side-container">
                        <div class="initial active">

                            <h2>Trabajadores</h2>
                            <p>Encuentre el trabajo que mas se ajusta a sus cualidades</p>
                            <span class="round-icon">+</span>
                        </div>
                        <div class="collapsed">

                            <h2>Trabajadores</h2>
                            <span class="round-filled-icon">+</span>
                        </div>
                        <div class="expanded">

                            <h2>Trabajadores</h2>
                            <p>Trabaje con nosotros para establidad y seguridad laboral</p>

                            <div class="hero-twin-items">
                                <div class="hero-twin-item">
                                    <i class="icon-featured icon-docs icons text-color-light"></i>
                                    <p>Contrato laboral, seguridad social y prestaciones sociales</p>
                                </div>
                                <div class="hero-twin-item">
                                    <i class="icon-featured icon-umbrella icons text-color-light"></i>
                                    <p>Salud, Pensión, ARL y Caja de compensación familiar</p>
                                </div>
                                <div class="hero-twin-item">
                                    <i class="icon-featured icon-like icons text-color-light"></i>
                                    <p>Convenios especiales y beneficios para nuestros trabajadores.</p>
                                </div>
                            </div>
                            {% if is_granted('ASPIRANTES_MODULE') %}
                                <a class="btn btn-white btn-twin-hero"
                                   href="{{ path('vacante_listado') }}"
                                   data-ga-twin-label="| Personal CTA" data-pa-click="hero|Personal CTA">
                                    Buscar trabajo</a>
                            {% endif %}
                            <div class="legal-container">
                                <p class="legal-notes">¿Ya es empleado?.<br>
                                <a href="{{ path('app_login') }}">
                                    Ingrese al servicio de empleados
                                </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /SLIDER -->

    <div class="home-intro mb-0" id="home-intro">
        <div class="container">

            <div class="row align-items-center">
                <div class="col-lg-8">
                    <p>
                        Desde 1985, somos el aliado estratégico de su empresa.
                        <span>Suministramos personal calificado para diferentes sectores economicos</span>
                    </p>
                </div>
                <div class="col-lg-4">
                    <div class="get-started text-left text-lg-right">
                        <a href="#" class="btn btn-primary btn-lg text-3 font-weight-semibold px-4 py-3">
                            Conocer mas sobre nosotros!
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="container py-3 my-5">
        <div class="row justify-content-center appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="400">
            <div class="col">
                <h2 class="text-10 font-weight-normal text-color-dark mb-4 line-height-4">
                    <span class="text-color-primary font-weight-bold ">PTA S.A.S</span> - Personal Temporal y Asesorías
                </h2>
                <p class="text-5 font-weight-normal text-color-dark line-height-7">
                    Respaldados por nuestra amplia experiencia en la administración de recursos humanos,
                    nos posicionamos en el mercado como una de las empresas líderes del sector.
                </p>
            </div>
        </div>
    </div>


    <div class="container">
        <div class="row counters counters-sm py-4 mt-5">
            <div class="col-sm-6 col-lg-3 mb-5 mb-lg-0">
                <div class="counter">
                    <i class="fa fa-building"></i>
                    <strong class="text-color-dark font-weight-extra-bold" data-to="150" data-append="+">0</strong>
                    <label class="text-4 mt-1">Empresas usuarias</label>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3 mb-5 mb-lg-0">
                <div class="counter">
                    <i class="fa fa-user"></i>
                    <strong class="text-color-dark font-weight-extra-bold" data-to="3500" data-append="+">0</strong>
                    <label class="text-4 mt-1">Empleados en misión</label>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3 mb-5 mb-lg-0">
                <div class="counter">
                    <i class="fa fa-medal"></i>
                    <strong class="text-color-dark font-weight-extra-bold" data-to="34">0</strong>
                    <label class="text-4 mt-1">Años de experiencia</label>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="counter">
                    <i class="fa fa-home"></i>
                    <strong class="text-color-dark font-weight-extra-bold" data-to="8" data-append="">0</strong>
                    <label class="text-4 mt-1">Agencias en Colombia</label>
                </div>
            </div>
        </div>

    </div>




    <section class="section section-height-5 bg-light border border-bottom-0 m-0 cualidades">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="feature-box feature-box-style-2 reverse mb-xl appear-animation" data-appear-animation="fadeInLeft" data-appear-animation-delay="300">
                        <div class="feature-box-icon">
                            <i class="fa fa-bolt"></i>
                        </div>
                        <div class="feature-box-info">
                            <h4 class="mb-sm">Politica de calidad</h4>
                            <p class="mb-lg">
                                Satisfacer a los clientes en el suministro de empleados en misión idóneos,
                                garantizando la calidad del servicio.
                            </p>
                        </div>
                    </div>
                    <div class="feature-box feature-box-style-2 reverse mt-xl appear-animation" data-appear-animation="fadeInLeft" data-appear-animation-delay="600">
                        <div class="feature-box-icon">
                            <i class="fa fa-arrows-alt"></i>
                        </div>
                        <div class="feature-box-info">
                            <h4 class="mb-sm">Presencia en varias ciudades</h4>
                            <p class="mb-lg">
                                Amplia red de oficinas que, trabajando en equipo,
                                aseguran cobertura en las principales ciudades de Colombia.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="{{ asset('/build/images/mockup-porto2.png') }}" class="img-responsive mockup-landing-page mb-xl appear-animation" alt="Porto" data-appear-animation="fadeInDown" data-appear-animation-delay="300">
                </div>
                <div class="col-md-4">
                    <div class="feature-box feature-box-style-2 mb-xl appear-animation" data-appear-animation="fadeInRight" data-appear-animation-delay="300">
                        <div class="feature-box-icon">
                            <i class="fa fa-puzzle-piece"></i>
                        </div>
                        <div class="feature-box-info">
                            <h4 class="mb-sm">Aliado Estrategico</h4>
                            <p class="mb-lg">
                                Nuestro principal motor es lograr cumplir los objetivos de nuestros clientes,
                                aportando experiencia y compromiso.
                            </p>
                        </div>
                    </div>
                    <div class="feature-box feature-box-style-2 mt-xl appear-animation" data-appear-animation="fadeInRight" data-appear-animation-delay="600">
                        <div class="feature-box-icon">
                            <i class="fa fa-chart-line"></i>
                        </div>
                        <div class="feature-box-info">

                            <h4 class="mb-sm">Crecimiento continuo</h4>

                            <p class="mb-lg">
                                Buscamos constantemente el mejoramiento continuo de nuestros procesos.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('index') }}
{% endblock %}
