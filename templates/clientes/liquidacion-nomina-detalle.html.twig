{% extends 'base.html.twig' %}
{% from 'clientes/_liquidacion-nomina.html.twig' import liquidacion_nomina, liquidacion_nomina_resumen %}

{% block title %}
    Liquidacion nomina
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('portal-clientes') }}
{% endblock %}


{% block body_header_title %}
    Liquidacion nomina
    <small>
        {{ liquidacionNominaResumen.fechaInicial|date('Y-m-d') ~ ' a ' ~ liquidacionNominaResumen.fechaFinal|date('Y-m-d') }}
    </small>
{% endblock %}

{% block body_header_right %}
    <ul class="u-list-inline">
        <li class="list-inline-item g-color-primary">
            <a href="{{ path('clientes_liquidacion_nomina_detalle_pdf', { id: liquidacionNominaResumen.id }) }}"
               class="btn btn-md btn-primary u-btn-outline-primary rounded-0 form-control form-control-lg">
                <i class="fas fa-file-pdf"></i> Exportar PDF
            </a>
        </li>
    </ul>
{% endblock %}

{% block body %}
<table class="table liquidacion-nomina">
    {% for liquidacionNomina in liquidacionNominaResumen.liquidacionesNomina %}
        {{ liquidacion_nomina(liquidacionNomina) }}
    {% endfor %}
</table>
{{ liquidacion_nomina_resumen(liquidacionNominaResumen) }}
{% endblock %}
