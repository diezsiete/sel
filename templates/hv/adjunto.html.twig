{% extends 'hv/base.hv.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}

    <div class="row">
        <div class="col-lg-12">
            <section class="card">
                <header class="card-header">
                    <h2 class="card-title">Adjunto</h2>
                </header>
                <div class="card-body">
                    <form action="{{ path('hv_adjunto_upload', {id: hv.id}) }}" method="POST" enctype="multipart/form-data">
                        <input type="file" name="adjunto" >
                        <button type="submit" class="btn btn-sm btn-primary">Cargar</button>
                    </form>
                </div>
            </section>
        </div>
    </div>

{% endblock %}
