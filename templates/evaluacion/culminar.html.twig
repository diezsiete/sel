{% extends 'base.html.twig' %}

{% block body %}
    <div class="alert alert-dismissible fade show g-bg-teal g-color-white rounded-0" role="alert">


        <div class="media">
            <span class="d-flex g-mr-10 g-mt-5">
              <i class="icon-check g-font-size-25"></i>
            </span>
            <p class="media-body align-self-center">
              <strong>Muy Bien!</strong> Ha completado satisfactoriamente la {{ evaluacion.nombre }}
                <br>
                <br>
                <strong>
                Recuerde que debe llevar impreso el certificado de culminación al momento de contratación
                </strong>
            </p>
        </div>
    </div>
    <div class="row g-mt-30">
        <div class="col-12 text-center">
            <a href="{{ path('evaluacion_certificado', {evaluacionSlug: evaluacion.slug, progresoId: progreso.id}) }}"
               class="btn btn-xxl u-btn-outline-darkgray rounded-0 g-mr-10 g-mb-15" target="_blank">
                <i class="fas fa-file-pdf"></i>
                Descargar certificado
            </a>
        </div>
    </div>

{% endblock %}

