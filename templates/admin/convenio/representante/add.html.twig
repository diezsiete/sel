{% extends "base.html.twig" %}

{% block body_header_title %}
    Asignar nuevo representante <small>a <i>{{ convenio.codigo }}</i></small>
{% endblock %}

{% block body_header_right %}
    <a href="{{ path('admin_convenio_representantes', {codigo: convenio.codigo}) }}" class="btn btn-secondary">
        Cancelar
    </a>
{% endblock %}

{% block body %}
    {% if formIdentificacion is defined %}
        {{ form_start(formIdentificacion, {attr: {novalidate: 'novalidate'}}) }}
        <div class="form-row">
            {{ form_row(formIdentificacion.identificacion, {container_attr: {class: 'col-md-9'}}) }}
            <div class="form-group col-md-3">
                <label>&nbsp;</label><br>
                <button type="submit" class="btn btn-primary mb-2">Enviar</button>
            </div>
        </div>
        {{ form_end(formIdentificacion) }}
    {% else %}
        {{ include('admin/convenio/representante/_form.html.twig') }}
    {% endif %}


{% endblock %}

