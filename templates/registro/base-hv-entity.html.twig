{% endblock %}

{% block modal_body %}
    {{ include('hv/hv-entity/_estudio-form.html.twig') }}
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script src="{{ asset('js/sel/registro/registro.js') }}"></script>
{% endblock %}