{% extends 'hv/base-hv-entity.html.twig' %}

{% block tabs %}
{% endblock %}

{% block card_title %}
    Estudios
{% endblock %}
{% block card_body %}
    {% block card_body_text %}
    {% endblock %}
    <div class="alerts"></div>
    {{ parent() }}
    <a class="crear-entity btn btn-primary pull-right" href="#modalForm">Agregar</a>
