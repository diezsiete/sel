{% extends 'base.html.twig' %}


{% block title %}Inicio{% endblock %}
{% block body_header_title %}
    Panel de inicio
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('datatable') }}
{% endblock %}

{% block body %}
    {% if datatables is not empty %}
        <div class="row">
            <div class="col-lg-8 mb-5">
                <section class="card">
                    <header class="card-header">
                        Ultimos comprobantes de pago
                    </header>
                    <div class="card-body">
                        {#<div id="comprobantes" class="datatable" data-settings='{{ datatable_settings(datatables.comprobantes) }}'>
                            Loading...
                        </div>#}

                        {{ include('servicio_empleados/_comprobantes-temp-table.html.twig') }}
                        <div class="text-right">
                            <br>
                            <a href="{{ path('se_comprobantes') }}" class="btn btn-primary">Ver todos</a>
                        </div>
                    </div>

                </section>
            </div>

            <div class="col-lg-4">
                <div class="row mb-3">
                    <div class="col-xl-12">
                        <section class="card card-featured-left card-featured-primary mb-3">
                            <div class="card-body">
                                {#<a href="{{ path('se_certificado_laboral_pdf') }}" target="_blank">#}
                                <a href="{{ path('app_certificado_laboral_pdf') }}" target="_blank">
                                <div class="widget-summary">
                                    <div class="widget-summary-col widget-summary-col-icon">
                                        <div class="summary-icon bg-primary">
                                            <i class="fas fa-file-invoice"></i>
                                        </div>
                                    </div>
                                    <div class="widget-summary-col">
                                        <div class="summary">
                                            <div class="info">
                                                <strong class="amount">Certificado <br>laboral</strong>
                                            </div>
                                        </div>
                                        <div class="summary-footer">
                                            <a class="text-muted" href="#">Descargar</a>
                                        </div>
                                    </div>
                                </div>
                                </a>
                            </div>
                        </section>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12">
                        <section class="card card-featured-left card-featured-tertiary mb-3">
                            <div class="card-body">
                                <div class="widget-summary">
                                    <div class="widget-summary-col widget-summary-col-icon">
                                        <div class="summary-icon bg-tertiary">
                                            <i class="fas fa-clipboard-list"></i>
                                        </div>
                                    </div>
                                    <div class="widget-summary-col">
                                        <div class="summary">
                                            <h4 class="title">Evaluación inducción</h4>
                                            <div class="info">
                                                <strong class="amount">0%</strong>
                                            </div>
                                        </div>
                                        <div class="summary-footer">
                                            <a class="text-muted" href="{{ path('evaluacion', {evaluacionSlug: 'induccion'}) }}">
                                                Completar
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <section class="card">
                    <header class="card-header">
                        Ultimos Aportes a seguridad social
                    </header>
                    <div class="card-body">
                        <div id="aportes" class="datatable" data-settings='{{ datatable_settings(datatables.aportes) }}'>
                            Loading...
                        </div>
                        <div class="text-right">
                            <a href="{{ path('app_certificados_aportes') }}" class="btn btn-primary">Ver todos</a>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('datatable') }}
    {#{% if datatables is not empty %}
        {% embed 'datatable/javascripts.datatable.html.twig' %}
            {% block script_datatable %}
                <script>
                    $(function () {
                        {% for key, datatable in datatables %}
                            $('#{{ key }}').initDataTables({{ datatable_settings(datatable) }});
                        {% endfor %}
                    });
                </script>
            {% endblock %}
        {% endembed %}
    {% endif %}#}
{% endblock %}