{% extends 'servilabor/base.html.twig' %}

{% block title %}

{% endblock %}

{% block body_header %}
    <!-- Blog Single Item Banner -->
    <section class="g-bg-cover g-bg-size-cover g-bg-white-gradient-opacity-v1--after"
             data-bg-img-src="{{ asset('img/servilabor/blog/' ~ post.img ~ '-main.jpg') }}">
        <div class="container text-center g-pos-rel g-z-index-1 g-pb-50">
            <div class="row d-flex justify-content-center align-content-end flex-wrap g-min-height-450">
                <div class="col-lg-7 mt-auto">
                    <div class="mb-5">
                        <h1 class="g-color-white g-font-weight-600 g-mb-30">
                            {{ post.title }}
                        </h1>
                    </div>
                    <span class="g-color-white-opacity-0_7 g-font-weight-300 g-font-size-12">{{ post.date | ago }}</span>
                </div>
            </div>
        </div>
    </section>
    <!-- End Blog Single Item Banner -->



{% endblock %}

{% block body %}
    <section class="container g-pt-50">
        <div class="row justify-content-center">
            <div class="col-lg-9">
                <div class="g-mb-60">
                    <div class="float-right g-max-width-250 g-mr-minus-100--lg ml-5">
                        <h3 class="h6 g-color-black g-font-weight-600 text-uppercase mb-4">Recomendados</h3>
                        <ul class="list-unstyled g-brd-y g-brd-gray-light-v3 g-font-size-13 py-4">
                            {% for recomendado in recomendados %}
                                <li>
                                    <article class="media mb-3">
                                        <img class="d-flex align-self-center g-width-40 g-height-40 rounded-circle mr-3"
                                             src="{{ asset('img/servilabor/blog/' ~ recomendado.thumb) }}" alt="{{ recomendado.slug }}">
                                        <div class="media-body align-self-center">
                                            <span class="g-color-gray-dark-v5 g-font-size-9 text-uppercase">
                                                {{ recomendado.tags.first.name }}
                                            </span>
                                            <h4 class="g-color-black g-font-weight-600 g-font-size-12 mb-0">
                                                <a class="u-link-v5 g-color-black g-color-primary--hover"
                                                   href="{{ path('servilabor_blog_item', {slug: recomendado.slug}) }}">
                                                    {{ recomendado.title }}
                                                </a>
                                            </h4>
                                        </div>
                                    </article>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>

                    {{ post.content | raw }}

                </div>
            </div>

        </div>
    </section>

    <!-- Blog Single Item Author -->
    <section class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9">
                <!-- Tags -->
                <div class="g-mb-40">
                    <ul class="u-list-inline mb-5">
                        {% for tag in post.tags %}
                            <li class="list-inline-item g-mb-10">
                                <a class="u-tags-v1 g-brd-around g-brd-gray-dark-v5 g-brd-primary--hover g-color-black g-color-white--hover g-bg-primary--hover g-font-weight-600 g-font-size-12 g-rounded-50 g-py-4 g-px-15"
                                   href="{{ path('servilabor_blog_tag', { slug: tag.slug }) }}">
                                    {{ tag.name | capitalize }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <!-- End Tags -->
            </div>
        </div>
    </section>
    <!-- End Blog Single Item Author -->
{% endblock %}


