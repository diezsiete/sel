{% if pageCount > 1 %}
    <nav class="text-center" aria-label="Page Navigation">
        <ul class="list-inline">

            {% if previous is defined %}
                <li class="list-inline-item float-left g-hidden-xs-down">
                    <a class="u-pagination-v1__item u-pagination-v1-4 g-brd-gray-light-v3 g-brd-primary--hover g-rounded-50 g-pa-7-16"
                       href="{{ path(route, query|merge({(pageParameterName): previous})) }}" aria-label="Previous">
                      <span aria-hidden="true">
                        <i class="fa fa-angle-left g-mr-5"></i> {{ 'label_previous'|trans({}, 'KnpPaginatorBundle') }}
                      </span>
                        <span class="sr-only">{{ 'label_previous'|trans({}, 'KnpPaginatorBundle') }}</span>
                    </a>
                </li>
            {% else %}
                <li class="list-inline-item float-left g-hidden-xs-down">
                    <span aria-hidden="true">
                        <i class="fa fa-angle-left g-mr-5"></i> {{ 'label_previous'|trans({}, 'KnpPaginatorBundle') }}
                    </span>
                </li>
            {% endif %}

            {% if startPage > 1 %}
                <li class="list-inline-item">
                    <a class="u-pagination-v1__item u-pagination-v1-4 u-pagination-v1-4--active g-rounded-50 g-pa-7-14"
                       href="{{ path(route, query|merge({(pageParameterName): 1})) }}">1</a>
                </li>
                {% if startPage == 3 %}
                    <li class="list-inline-item">
                        <a class="u-pagination-v1__item u-pagination-v1-4 u-pagination-v1-4--active g-rounded-50 g-pa-7-14"
                           href="{{ path(route, query|merge({(pageParameterName): 2})) }}">2</a>
                    </li>
                {% elseif startPage != 2 %}
                    <li class="list-inline-item disabled">
                        <span class="u-pagination-v1-4 g-rounded-50 g-pa-7-16">&hellip;</span>
                    </li>
                {% endif %}
            {% endif %}

            {% for page in pagesInRange %}
                {% if page != current %}
                    <li class="list-inline-item">
                        <a class="u-pagination-v1__item u-pagination-v1-4 u-pagination-v1-4--active g-rounded-50 g-pa-7-14"
                           href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                    </li>
                {% else %}
                    <li class="list-inline-item active">
                        <span class="u-pagination-v1__item u-pagination-v1-4 g-rounded-50 g-pa-7-14">{{ page }}</span>
                    </li>
                {% endif %}

            {% endfor %}

            {% if pageCount > endPage %}
                {% if pageCount > (endPage + 1) %}
                    {% if pageCount > (endPage + 2) %}
                        <li class="list-inline-item disabled">
                            <span class="u-pagination-v1-4  g-rounded-50 g-pa-7-16">&hellip;</span>
                        </li>
                    {% else %}
                        <li class="list-inline-item">
                            <a class="u-pagination-v1__item u-pagination-v1-4 u-pagination-v1-4--active g-rounded-50 g-pa-7-14"
                               href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)})) }}">{{ pageCount -1 }}</a>
                        </li>
                    {% endif %}
                {% endif %}
                <li class="list-inline-item">
                    <a class="u-pagination-v1__item u-pagination-v1-4 u-pagination-v1-4--active g-rounded-50 g-pa-7-14"
                       href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">{{ pageCount }}</a>
                </li>
            {% endif %}

            {% if next is defined %}
                <li class="list-inline-item float-right g-hidden-xs-down">
                    <a class="u-pagination-v1__item u-pagination-v1-4 g-brd-gray-light-v3 g-brd-primary--hover g-rounded-50 g-pa-7-16"
                       href="{{ path(route, query|merge({(pageParameterName): next})) }}" aria-label="Next">
                      <span aria-hidden="true">
                        {{ 'label_next'|trans({}, 'KnpPaginatorBundle') }} <i class="fa fa-angle-right g-ml-5"></i>
                      </span>
                        <span class="sr-only">{{ 'label_next'|trans({}, 'KnpPaginatorBundle') }}</span>
                    </a>
                </li>

            {% else %}
                <li class="list-inline-item float-right g-hidden-xs-down">
                    <span aria-hidden="true">
                        {{ 'label_next'|trans({}, 'KnpPaginatorBundle') }} <i class="fa fa-angle-right g-ml-5"></i>
                    </span>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}
