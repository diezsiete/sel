<div class="thumb-info mb-3">
    {#                        <img src="{{ asset('img/!logged-user.jpg') }}" class="rounded img-fluid" alt="John Doe">#}
    <div style="background: #E1E1E1; width: 261px; height:71px;" class="rounded img-fluid"></div>
    <div class="thumb-info-title">
        <span class="thumb-info-inner">{{ hv.usuario.nombreCompleto }}</span>
        <span class="thumb-info-type">
                                {{ hv.usuario.identificacion }} -
                                {{ constant('App\\Constant\\HvConstant::IDENTIFICACION_TIPO')[hv.identificacionTipo] }}
                            </span>
    </div>
</div>

<hr class="dotted short">

<h5 class="mb-2 mt-3">Identificación</h5>
<p class="text-2">
    <b>{{ constant('App\\Constant\\HvConstant::IDENTIFICACION_TIPO')[hv.identificacionTipo] }}</b> -
    {{ hv.usuario.identificacion }}<br>
    <b>De : </b>
    {{ hv.identCiudad.nombre }}, {{ hv.identDpto }}, {{ hv.identPais }}
</p>

<hr class="dotted short">

<h5 class="mb-2 mt-3">Nacimiento ( {{  hv.nacimiento|ago }} )</h5>
<p class="text-2">
    {{ hv.nacimiento|date('Y-m-d') }}<br>
    <b>De : </b>
    {{ hv.identCiudad.nombre }}, {{ hv.identDpto }}, {{ hv.identPais }}
</p>

<hr class="dotted short">

<h5 class="mb-2 mt-3">Contacto</h5>
<p class="text-2">
    <b>Email : </b>{{ hv.usuario.email }}<br>
    {% if hv.emailAlt %}
        <b>Email Alt : </b> {{ hv.emailAlt }}<br>
    {% endif %}
    {% if hv.telefono %}
        <b>Teléfono : </b> {{ hv.telefono }}<br>
    {% endif %}
    {% if hv.celular %}
        <b>Celular : </b> {{ hv.celular }}
    {% endif %}
</p>

<hr class="dotted short">

<h5 class="mb-2 mt-3">Residencia</h5>
<p class="text-2">
    {{ hv.resiCiudad.nombre }}, {{ hv.resiDpto }}, {{ hv.resiPais }}<br>
    <b>Dirección : </b> {{ hv.direccion }} - {{ hv.barrio }}
</p>

<hr class="dotted short">

<h5 class="mb-2 mt-3">Información Adicional</h5>
<p class="text-2">
    <b>Estado civil:</b> {{ constant('App\\Constant\\HvConstant::ESTADO_CIVIL')[hv.estadoCivil] }}<br>
    <b>Grupo sanguineo</b> {{ hv.grupoSanguineo ~ " " ~ hv.factorRh }}<br>
    <b>Nacionalidad</b> {{ constant('App\\Constant\\HvConstant::NACIONALIDAD')[hv.nacionalidad] }}<br>
</p>