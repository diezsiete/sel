<div class="p-3">
    <div class="timeline timeline-simple mt-3 mb-3">
        <div class="tm-body">
            <ol class="tm-items">
                {% for estudio in hv.estudios %}
                    <li>
                        <div class="tm-box">
                            <form>
                                <div class="form-group row">
                                    <label for="area" class="col-sm-4 col-form-label">Area de estudio</label>
                                    <div class="col-sm-8">
                                        <input type="text" readonly class="form-control-plaintext" id="area"
                                               value="{{ estudio.codigo.nombre }}">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="titulo" class="col-sm-4 col-form-label">Titulo del estudio</label>
                                    <div class="col-sm-8">
                                        <input type="text" readonly class="form-control-plaintext" id="titulo"
                                               value="{{ estudio.nombre }}">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="institucion" class="col-sm-4 col-form-label">Institución</label>
                                    <div class="col-sm-8">
                                        <input type="text" readonly class="form-control-plaintext" id="institucion"
                                               value="{{ estudio.institutoNombreAlt ?? estudio.instituto.nombre }}">
                                    </div>
                                </div>
                                {% if estudio.fin %}
                                    <div class="form-group row">
                                        <label for="finalizacion" class="col-sm-4 col-form-label">Fecha de finalización</label>
                                        <div class="col-sm-8">
                                            <input type="text" readonly class="form-control-plaintext" id="finalizacion"
                                                   value="{{ estudio.fin|date('Y-m-d') }}">
                                        </div>
                                    </div>
                                {% endif %}
                            </form>
                        </div>
                    </li>
                {% endfor %}
            </ol>
        </div>
    </div>
</div>