<div class="p-3">
    <div class="timeline timeline-simple mt-3 mb-3">
        <div class="tm-body">
            {% for key, referenciaTipo in constant('App\\Constant\\HvConstant::REFERENCIA_TIPO') %}
                <div class="tm-title">
                    <h5 class="m-0 pt-2 pb-2 text-uppercase">{{ referenciaTipo }}</h5>
                </div>
                <ol class="tm-items">
                    {% for referencia in hv.referencias(key) %}
                        <li>
                            <div class="tm-box">
                                <form>
                                    <div class="form-group row">
                                        <label for="referenciaNombre" class="col-sm-2 col-form-label">Nombre</label>
                                        <div class="col-sm-8">
                                            <input type="text" readonly class="form-control-plaintext" id="referenciaNombre"
                                                   value="{{ referencia.nombre }}">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="referenciaOcupacion" class="col-sm-2 col-form-label">Ocupacion</label>
                                        <div class="col-sm-8">
                                            <input type="text" readonly class="form-control-plaintext" id="referenciaOcupacion"
                                                   value="{{ referencia.ocupacion }}">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="referenciaParentesco" class="col-sm-2 col-form-label">Parentesco</label>
                                        <div class="col-sm-8">
                                            <input type="text" readonly class="form-control-plaintext" id="referenciaParentesco"
                                                   value="{{ referencia.parentesco }}">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-sm-4">
                                            <label for="referenciaCelular">Celular</label>
                                            <input type="text" readonly class="form-control-plaintext" id="referenciaCelular"
                                                   value="{{ referencia.celular }}">
                                        </div>
                                        <div class="form-group col-sm-4">
                                            <label for="referenciaTelefono">Teléfono</label>
                                            <input type="text" readonly class="form-control-plaintext" id="referenciaTelefono"
                                                   value="{{ referencia.telefono }}">
                                        </div>
                                        <div class="form-group col-sm-4">
                                            <label for="referenciaDireccion">Dirección</label>
                                            <input type="text" readonly class="form-control-plaintext" id="referenciaDireccion"
                                                   value="{{ referencia.direccion }}">
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </li>
                    {% endfor %}
                </ol>
            {% endfor %}
        </div>
    </div>
</div>